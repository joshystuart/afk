{
  "name": "afk",
  "version": "0.1.0",
  "description": "AFK - Away From Keyboard - Remote terminal access service",
  "scripts": {
    "init": "npm run install:all && npm run build && npm run docker:pull",
    "build": "npm run server:build && npm run web:build",
    "start": "concurrently \"npm run server:start\" \"npm run web:start\"",
    "start:dev": "concurrently \"npm run server:dev\" \"npm run web:dev\"",
    "docker:pull": "cd docker && npm run pull",
    "docker:build": "cd docker && npm run build",
    "docker:rebuild": "cd docker && npm run rebuild",
    "docker:build:force": "cd docker && npm run build:force",
    "server:dev": "cd server && npm run start:dev",
    "server:start": "cd server && npm run start",
    "server:build": "cd server && npm run build",
    "web:dev": "cd web && npm run dev",
    "web:start": "cd web && npm run preview",
    "web:build": "cd web && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../web && npm install",
    "lint": "cd server && npm run lint && cd ../web && npm run lint",
    "test": "cd server && npm run test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:staged": "prettier --write --list-different"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "terminal",
    "docker",
    "remote-access",
    "claude-code"
  ],
  "author": "joshstuartx+afk@gmail.com",
  "license": "MIT",
  "private": true
}
